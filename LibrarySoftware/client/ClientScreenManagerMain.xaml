<Window x:Class="LibrarySoftware.client.ClientScreenManagerMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySoftware.client"
        mc:Ignorable="d"
        Title="Library software" Height="300" Width="300" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="book.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Čtenáři" Name="ReadersButton" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Width="100" Click="ReadersButton_Click"/>
        <Button Content="Knihy" Name="BooksButton" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Width="100" Click="BooksButton_Click"/>
        <Button Content="Knihovníci" Name="librariansButton" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Width="100" Click="librariansButton_Click"/>
    </Grid>
</Window>
